{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": false,
        "strict": true,
        "suppressImplicitAnyIndexErrors": false
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src/**/*"
    ]
}